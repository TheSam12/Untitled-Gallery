
<div class="relative">
    <div class="flex justify-between">
        <p class="text-[14px] sfMono text-[#e5e7eb] uppercase">bid history</p>
        <a id="seeAllBidHistory" class="text-[14px] see-all-bid cursor-pointer">See all</a>
    </div>
    <hr class="h-1 mt-[10px]"/>
    <div id="historyModal" class="bid-history-modal">
        <div class="bid-history-modal-content">
            <span class="cerrar">&times;</span>
            <h2>Ventana modal</h2>
            <p>Esto es el texto de la ventana</p>
        </div>
    </div>
</div>
<div id="overlay" class="modal-overlay"></div>
<script>
    const modal = document.getElementById('historyModal');
    const seeAllBidHistory = document.getElementById('seeAllBidHistory');
    const overlay = document.getElementById('overlay');

    seeAllBidHistory.addEventListener('click', function() {
    modal.style.display = 'block';
    overlay.style.display = 'block';
    });

    modal.addEventListener('click', function(event) {
    if (event.target === modal || event.target.classList.contains('cerrar')) {
        modal.style.display = 'none';
        overlay.style.display = 'none';
    }
    });
</script>