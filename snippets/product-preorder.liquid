{% liquid
    assign current_date = 'now' | date: '%s'
    assign timer = product.metafields.custom.livestreaming.value.start_time | date: '%s'
    assign upcomming = product.metafields.custom.livestreaming.value.start_time
%}
{% if timer > current_date %}
<div class="border-solid p-[24px] w-full">
    <div class="flex flex-col gap-[24px] justify-center">
        <div>
            <p class="text-[14px] sfMono flex gap-[5px] items-center justify-center"><span class="relative"><span class="redDot animate-ping absolute"></span><span class="redDot"></span></span> Pre-orders are open</p>
        </div>
        <p class="text-[14px] text-[#9d9d9d] text-center">Limited number of works available</p>
        <button class="w-full bg-black py-[16px] text-white sfMono text-[14px]">Apply for pre-order</button>
        <p class="text-center text-[14px] underline">How pre-orders work</p>
        <hr class="border-b-[0px] border-dashed"> 
        <p class="text-center text-[14px] font-bold sfMono">Release starts</p>
        <p class="text-center text-[14px] sfMono">{{ upcomming | date: "%D %d, %B %I:%M %p %Z" }}</p>
    </div>
</div>
{% endif %}