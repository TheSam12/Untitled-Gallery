{% liquid
    assign current_date = 'now' | date: '%s'
    assign timer = product.metafields.custom.livestreaming.value.start_time | date: '%s'
%}
{% if timer > current_date %}
<div class="border-solid p-[24px] w-full">
    <div class="flex flex-col gap-[24px] justify-center">
        <div>
            <p class="text-[14px] sfMono flex gap-[5px] items-center"><span class="relative"><span class="redDot animate-ping absolute"></span><span class="redDot"></span></span> Pre-orders are open</p>
        </div>
        <p class="text-[14px] text-[#9d9d9d]">Limited number of works available</p>
        <hr class="border-b-[1px] border-b-dashed"> 
    </div>
</div>
{% endif %}