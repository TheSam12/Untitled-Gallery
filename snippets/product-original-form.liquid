{% liquid
    assign show-bid = product.metafields.custom.activate_bid.value
 %}
{% if show-bid == false %}
    {% for variant in product.variants -%}
        {% if variant.option2 == 'Original' %}
            <p class="text-[14px] uppercase text-[#9d9d9d]">original product price</p>
            <h2 class="text-[43px] neueSwift">{{ variant.price | money_without_trailing_zeros }}</h2>
            <div x-data="ProductForm">
                <form method="post" action="/cart/add" accept-charset="UTF-8" class="shopify-product-form" enctype="multipart/form-data" id="product-form-{{ section.id }}">
                    <input type="hidden" name="form_type" value="product">
                    <input type="hidden" name="utf8" value="âœ“">
                    <button id="addToCartButton" class="add-to-cart w-full px-1 py-4 bg-black text-white sfMono" type="submit">
                        Buy the original version now
                    </button>
                    <input type="hidden" name="product-id" value="{{ variant.id }}">
                    <input type="hidden" name="section-id" value="template--21168759701835__main">
                </form>
            </div>
        {% endif %}
      {%- endfor %}
{% endif %}