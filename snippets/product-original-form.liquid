{% liquid
    assign show-bid = product.metafields.custom.activate_bid.value
 %}
{% if show-bid == false %}
    {% for variant in product.variants %}
        {% if variant.option1 == "Version" and variant.option2 == "Original" %}
            <div>
                {{ variant.price | money_without_trailing_zeros }}
            </div>
        {% endif %}
      {% endfor %}
{% endif %}