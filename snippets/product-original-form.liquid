{% liquid
    assign show-bid = product.metafields.custom.activate_bid.value
 %}
{% if show-bid == false %}
    <div class="my-8" id="original-product-price">
        {% for variant in product.variants -%}
            {% for option in variant.options %}
                {% if option == 'Original' %}
                    <p class="text-[14px] uppercase text-[#9d9d9d] mb-[14px]">original product prices</p>
                    <h2 class="text-[43px] neueSwift mb-[14px]">{{ variant.price | money_without_trailing_zeros }}</h2>
                    <div x-data="ProductForm">
                        {% form 'product', product, id: product_form_id %}
                            {{ form | payment_terms }}
                            <input type="hidden" name="id" value="{{ variant.id }}">
                            <button id="addToCartButton" class="add-to-cart w-full px-1 py-4 bg-black text-white sfMono" type="submit">
                                Buy the original version now
                            </button>
                        {% endform %}
                    </div>
                {% endif %}
            {% endfor %}
        {%- endfor %}
    </div>
{% endif %}