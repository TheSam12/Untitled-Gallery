{% liquid
    assign show-bid = product.metafields.custom.activate_bid.value
 %}
{% if show-bid == false %}
    {% for option in product.options_with_values %}
        {% if option.values == 'Original' %}
            <div>
                {{ product.price | money_without_trailing_zeros }}
            </div>
        {% endif %}
    {% endfor %}
{% endif %}