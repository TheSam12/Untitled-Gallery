{% liquid
    assign show-bid = product.metafields.custom.activate_bid.value
 %}
{% if show-bid == false %}
    {% for variant in product.variants %}
        {% for option in variant.options %}
            {% if option.name == 'Original' %}
                <div>
                    {{ option.price | money_without_trailing_zeros }}
                </div>
            {% endif %}
        {% endfor %}
      {% endfor %}
{% endif %}