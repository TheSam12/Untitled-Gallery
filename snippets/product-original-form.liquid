{% liquid
    assign show-bid = product.metafields.custom.activate_bid.value
 %}
{% if show-bid == false %}
    {% for variant in product.variants -%}
        {% for option in variant.options -%}
            {% if option.name == 'None Original' %}
                {{ option }}
            {% endif %}
        {%- endfor %}
      {%- endfor %}
{% endif %}