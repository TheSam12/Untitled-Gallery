{% liquid
    assign show-bid = product.metafields.custom.activate_bid.value
 %}
{% if show-bid == false %}
    {% for variant in product.variants -%}
        {%- capture options -%}
          {% for option in variant.options -%}
            {{ option }}{%- unless forloop.last -%}/{%- endunless -%}
          {%- endfor %}
        {%- endcapture -%}
        
        {{ variant.id }}: {{ options }}
      {%- endfor %}
{% endif %}