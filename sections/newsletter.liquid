{%- liquid
  assign section_color = section.settings.color_scheme
  assign text_size_class = section.settings.text_size
  assign bgImg = section.settings.bgImg
  assign bgImgMobile = section.settings.bgImgMobile
-%}

{% render 'newsletter',
  section_color: section_color,
  text_size_class: text_size_class,
  bgImg: bgImg,
  bgImgMobile: bgImgMobile,
  section_title: section.settings.section_title,
  subheading: section.settings.subheading,
  section_id: section.id
%}

{% schema %}
{
  "name": "Newsletter",
  "disabled_on": {
    "groups": [
      "header",
      "footer",
      "aside"
    ]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "bgImg",
      "label": "Background Image For Desktop"
    },
    {
      "type": "image_picker",
      "id": "bgImgMobile",
      "label": "Background Image For Mobile"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Receive special offers and first look at new products.</p>"
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "Text size",
      "options": [
        {
          "value": "text-sm",
          "label": "S"
        },
        {
          "value": "text-base",
          "label": "M"
        },
        {
          "value": "text-lg",
          "label": "L"
        },
        {
          "value": "text-xl",
          "label": "XL"
        }
      ],
      "default": "text-base"
    },
    {
      "type": "paragraph",
      "content": "Any customers who sign up will have an account created for them in Shopify. [View customers](/admin/customers?query=&accepts_marketing=1)"
    },
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme1",
      "label": "Color scheme"
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}
