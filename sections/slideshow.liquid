    const shopifyProductRecord= await api.shopifyProduct.findMany({ first: 3, select: { 
        images: {
          edges: {
            node: {
              id: true,
              source: true,
            },
          },
        },
        id: true,
        title: true,
      } 
    }); 
    data.products = shopifyProductRecord;
    console.log(data.products);
  }
</script>

