<section id="featured-brands-{{ section.id }}">
    <div>
        <h2>
            {{ section.settings.title }}
        </h2>
    </div>
    <div class="grid grid-cols-3 gap-3 lg:grid-cols-6">
        {% for block in section.blocks %}
            {% if block.settings.brandImage != blank %}
                <div class="flex justify-center">
                    <img src="{{ block.settings.brandImage | img_url: "master" }}" alt="{{ section.settings.brandImage.alt }} "/>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</section>

{% schema %}
    {
        "name": "Featured Brands",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title",
                "default": "Our Partners"
            }
        ],
        "blocks": [
            {
                "type": "brands",
                "name": "Brands",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "brandImage",
                        "label": "Brand Image"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Featured Brands"
            }
        ]
    }
{% endschema %}